    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broj telefona:"/>

        <EditText
            android:id="@+id/nekretnina_broj_telefona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

